<h1>Mission Form</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color: red;"><%= error %></p>
    <% end %>
<% end %>


<%= form_for(@mission) do |f| %>
    <%= f.label "Name: "%>
    <%= f.text_field :name %>

    <%= f.label "Planet: " %>
    <%= f.collection_select :planet_id, @planets, :id, :name %>

    <%= f.label "Scientist: " %>
    <%= f.collection_select :scientist_id, @scientists, :id, :name %>

    <%= f.submit "Create Mission" %>
<% end %>